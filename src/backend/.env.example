# Database Configuration
# Options: postgres, sqlite
# If sqlite is chosen, other DB fields are ignored (uses in-memory or local file)
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=hope_db
# Set to 'true' to enable SSL (required for some cloud providers)
DB_SSL=false 
DB_POOL_SIZE=10

# Authentication (OAuth)
# GitHub: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Valid callback URLs for local development:
# http://localhost:3000/auth/github/callback
# http://localhost:3000/auth/google/callback

# Application Settings
PORT=3000
NODE_ENV=development
# JWT_SECRET=your_jwt_secret # If using JWT directly
