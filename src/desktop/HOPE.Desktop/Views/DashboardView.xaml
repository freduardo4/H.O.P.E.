<UserControl x:Class="HOPE.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#121212">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="VEHICLE DASHBOARD" Foreground="White" FontSize="32" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="10" Height="10" Fill="{Binding IsStreaming, Converter={StaticResource BooleanToStatusColorConverter}}" Margin="0,0,8,0"/>
                <TextBlock Text="{Binding ConnectionStatus}" Foreground="#AAAAAA" FontSize="14"/>
            </StackPanel>
        </StackPanel>

        <!-- Gauges Grid -->
        <UniformGrid Grid.Row="1" Columns="2">
            <!-- RPM Gauge -->
            <Border Margin="10" Background="#1E1E1E" CornerRadius="12">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- In a real app we'd use LiveCharts NeedleGauge, for now simple text/circle for demo if LiveCharts setup is tricky -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding EngineRpm, StringFormat={}{0:F0}}" Foreground="#00E676" FontSize="64" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="RPM" Foreground="#AAAAAA" FontSize="18" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Engine Speed" Foreground="#666666" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <!-- Speed Gauge -->
            <Border Margin="10" Background="#1E1E1E" CornerRadius="12">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding VehicleSpeed, StringFormat={}{0:F0}}" Foreground="#2979FF" FontSize="64" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="km/h" Foreground="#AAAAAA" FontSize="18" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Vehicle Speed" Foreground="#666666" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <!-- Load Gauge -->
            <Border Margin="10" Background="#1E1E1E" CornerRadius="12">
                 <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding EngineLoad, StringFormat={}{0:F1}}" Foreground="#FF9100" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="%" Foreground="#AAAAAA" FontSize="18" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Engine Load" Foreground="#666666" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <!-- Temp Gauge -->
            <Border Margin="10" Background="#1E1E1E" CornerRadius="12">
                 <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CoolantTemp, StringFormat={}{0:F0}}" Foreground="#F44336" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Â°C" Foreground="#AAAAAA" FontSize="18" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Coolant Temp" Foreground="#666666" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{Binding IsStreaming, Converter={StaticResource StreamButtonTextConverter}}" 
                    Command="{Binding ToggleStreamingCommand}"
                    Padding="30,12" FontSize="16" FontWeight="SemiBold"
                    Background="{Binding IsStreaming, Converter={StaticResource StreamButtonColorConverter}}"
                    Foreground="White" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
