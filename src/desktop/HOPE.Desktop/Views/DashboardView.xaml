<UserControl x:Class="HOPE.Desktop.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="#121212">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Anomaly Indicator -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="VEHICLE DASHBOARD" Foreground="White" FontSize="32" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="10" Height="10" Fill="{Binding IsStreaming, Converter={StaticResource BooleanToStatusColorConverter}}" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding ConnectionStatus}" Foreground="#AAAAAA" FontSize="14"/>
                </StackPanel>
            </StackPanel>

            <!-- Anomaly Status Panel (Clickable to expand) -->
            <Border Grid.Column="1" Background="{Binding IsAnomaly, Converter={StaticResource BooleanToAnomalyColorConverter}}"
                    CornerRadius="8" Padding="16,8" VerticalAlignment="Center" Cursor="Hand">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding ToggleAnomalyPanelCommand}"/>
                </Border.InputBindings>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding AnomalyScore, StringFormat='Score: {0:P0}'}"
                                       Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                            <Border Background="#333333" CornerRadius="3" Padding="6,2" Margin="10,0,0,0">
                                <TextBlock Text="{Binding AnomalySeverity}" Foreground="White" FontSize="10" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="{Binding AnomalyDescription}" Foreground="#DDDDDD" FontSize="11" MaxWidth="280" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" Text=">" Foreground="#888888" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"
                               RenderTransformOrigin="0.5,0.5">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAnomalyPanelExpanded}" Value="True">
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <RotateTransform Angle="90"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>
        </Grid>

        <!-- Expanded Anomaly Details Panel (Floating overlay) -->
        <Border Grid.Row="0" Grid.RowSpan="2" Background="#1A1A1A" CornerRadius="10" Margin="0,70,0,0" Padding="15"
                VerticalAlignment="Top" HorizontalAlignment="Right" Width="360"
                Visibility="{Binding IsAnomalyPanelExpanded, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="100">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Panel Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="AI ANOMALY ANALYSIS" Foreground="White" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalAnomaliesDetected, StringFormat=' ({0} detected)'}" Foreground="#888888" FontSize="12" VerticalAlignment="Bottom"/>
                </StackPanel>

                <!-- Contributing Parameters -->
                <Border Grid.Row="1" Background="#252525" CornerRadius="6" Padding="10" Margin="0,0,0,10"
                        Visibility="{Binding IsAnomaly, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="CONTRIBUTING FACTORS" Foreground="#888888" FontSize="10" FontWeight="Bold" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding ContributingParameters}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" Foreground="#CCCCCC" FontSize="11"/>
                                        <TextBlock Grid.Column="1" Text="{Binding ContributionPercent}" Foreground="#FF9800" FontSize="11" FontWeight="SemiBold"/>
                                        <ProgressBar Grid.Column="2" Value="{Binding Contribution}" Maximum="1" Height="6"
                                                     Background="#333333" Foreground="#FF9800"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Repair Suggestions -->
                <Border Grid.Row="2" Background="#252525" CornerRadius="6" Padding="10" Margin="0,0,0,10"
                        Visibility="{Binding IsAnomaly, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="REPAIR SUGGESTIONS" Foreground="#888888" FontSize="10" FontWeight="Bold" Margin="0,0,0,8"/>
                        <ItemsControl ItemsSource="{Binding RepairSuggestions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E1E1E" CornerRadius="4" Padding="8" Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border CornerRadius="3" Padding="4,2" VerticalAlignment="Top" Margin="0,0,8,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#666666"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Priority}" Value="1">
                                                                <Setter Property="Background" Value="#D32F2F"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Priority}" Value="2">
                                                                <Setter Property="Background" Value="#FF9800"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding PriorityLabel}" Foreground="White" FontSize="8" FontWeight="Bold"/>
                                            </Border>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Component}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Action}" Foreground="#AAAAAA" FontSize="10" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding EstimatedCost}" Foreground="#4CAF50" FontSize="10" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Anomaly History -->
                <Border Grid.Row="3" Background="#252525" CornerRadius="6" Padding="10" Margin="0,0,0,10" MaxHeight="120">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="RECENT ANOMALIES" Foreground="#888888" FontSize="10" FontWeight="Bold"/>
                            <Button Content="Clear" Command="{Binding ClearAnomalyHistoryCommand}"
                                    Background="Transparent" Foreground="#666666" FontSize="9" BorderThickness="0"
                                    Margin="10,0,0,0" Padding="0" Cursor="Hand"/>
                        </StackPanel>
                        <ScrollViewer MaxHeight="80" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding AnomalyHistory}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="55"/>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding TimeAgo}" Foreground="#666666" FontSize="9"/>
                                            <TextBlock Grid.Column="1" Text="{Binding ScorePercent}" Foreground="#FF9800" FontSize="10" FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Description}" Foreground="#AAAAAA" FontSize="9" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Close Button -->
                <Button Grid.Row="4" Content="CLOSE" Command="{Binding ToggleAnomalyPanelCommand}"
                        Background="#333333" Foreground="#AAAAAA" Padding="10,6" BorderThickness="0"
                        HorizontalAlignment="Right" FontSize="11" FontWeight="SemiBold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <!-- Gauges Grid -->
        <UniformGrid Grid.Row="1" Columns="4" Rows="2">
            <!-- RPM Gauge -->
            <Border Margin="6" Background="#1E1E1E" CornerRadius="10">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding EngineRpm, StringFormat={}{0:F0}}" Foreground="#00E676" FontSize="42" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="RPM" Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Engine Speed" Foreground="#666666" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </Grid>
            </Border>

            <!-- Speed Gauge -->
            <Border Margin="6" Background="#1E1E1E" CornerRadius="10">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding VehicleSpeed, StringFormat={}{0:F0}}" Foreground="#2979FF" FontSize="42" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="km/h" Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Vehicle Speed" Foreground="#666666" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </Grid>
            </Border>

            <!-- Load Gauge -->
            <Border Margin="6" Background="#1E1E1E" CornerRadius="10">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding EngineLoad, StringFormat={}{0:F1}}" Foreground="#FF9100" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="%" Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Engine Load" Foreground="#666666" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </Grid>
            </Border>

            <!-- Coolant Temp Gauge -->
            <Border Margin="6" Background="#1E1E1E" CornerRadius="10">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding CoolantTemp, StringFormat={}{0:F0}}" Foreground="#F44336" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="°C" Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Coolant Temp" Foreground="#666666" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </Grid>
            </Border>

            <!-- MAF Gauge -->
            <Border Margin="6" Background="#1E1E1E" CornerRadius="10">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding MafAirFlow, StringFormat={}{0:F1}}" Foreground="#7C4DFF" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="g/s" Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="MAF Air Flow" Foreground="#666666" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </Grid>
            </Border>

            <!-- Throttle Position Gauge -->
            <Border Margin="6" Background="#1E1E1E" CornerRadius="10">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ThrottlePosition, StringFormat={}{0:F1}}" Foreground="#00BCD4" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="%" Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Throttle" Foreground="#666666" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </Grid>
            </Border>

            <!-- Intake Air Temp Gauge -->
            <Border Margin="6" Background="#1E1E1E" CornerRadius="10">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding IntakeAirTemp, StringFormat={}{0:F0}}" Foreground="#FFEB3B" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="°C" Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="Intake Air" Foreground="#666666" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </Grid>
            </Border>

            <!-- Manifold Pressure Gauge -->
            <Border Margin="6" Background="#1E1E1E" CornerRadius="10">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ManifoldPressure, StringFormat={}{0:F0}}" Foreground="#E91E63" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Text="kPa" Foreground="#AAAAAA" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="MAP" Foreground="#666666" FontSize="11" HorizontalAlignment="Center" Margin="0,6,0,0"/>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Real-time Chart Panel (Collapsible) -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="10" Margin="0,10,0,0"
                Visibility="{Binding IsChartVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="180"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="REAL-TIME TRENDS" Foreground="#AAAAAA" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                
                <lvc:CartesianChart Grid.Row="1" 
                                    Series="{Binding ChartSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxesRpm}"
                                    TooltipPosition="Hidden"
                                    AnimationsSpeed="00:00:00.100">
                    <lvc:CartesianChart.Background>
                        <SolidColorBrush Color="Transparent"/>
                    </lvc:CartesianChart.Background>
                </lvc:CartesianChart>
            </Grid>
        </Border>

        <!-- Controls -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{Binding IsChartVisible, Converter={StaticResource ChartButtonTextConverter}}" 
                    Command="{Binding ToggleChartVisibilityCommand}"
                    Padding="20,12" FontSize="14" FontWeight="SemiBold"
                    Background="#2D2D2D" Foreground="#AAAAAA" BorderThickness="0" Margin="0,0,10,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="{Binding IsStreaming, Converter={StaticResource StreamButtonTextConverter}}" 
                    Command="{Binding ToggleStreamingCommand}"
                    Padding="30,12" FontSize="16" FontWeight="SemiBold"
                    Background="{Binding IsStreaming, Converter={StaticResource StreamButtonColorConverter}}"
                    Foreground="White" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
