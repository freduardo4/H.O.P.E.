<UserControl x:Class="HOPE.Desktop.Views.AxisEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600"
             Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="AXIS RESCALING" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto" MinWidth="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Original Axis -->
            <DockPanel Grid.Column="0">
                <TextBlock DockPanel.Dock="Top" Text="Current Axis Values" Foreground="#888" Margin="0,0,0,5"/>
                <ListBox ItemsSource="{Binding OriginalAxisValues}" Background="#111" Foreground="#AAA" BorderThickness="0"/>
            </DockPanel>

            <!-- Arrow -->
            <TextBlock Grid.Column="1" Text="âž”" Foreground="#555" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <!-- New Axis -->
            <DockPanel Grid.Column="2">
                <TextBlock DockPanel.Dock="Top" Text="New Axis Values (Editable)" Foreground="#2979FF" Margin="0,0,0,5"/>
                <TextBox Text="{Binding NewAxisValuesInput}" AcceptsReturn="True" Background="#222" Foreground="White" BorderThickness="1" BorderBrush="#444" Padding="5"/>
            </DockPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <CheckBox Content="Interpolate Map Data" IsChecked="{Binding ShouldInterpolate}" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Background="Transparent" Foreground="#AAA" Margin="0,0,10,0"/>
            <Button Content="Apply" Command="{Binding ApplyCommand}" Background="#2979FF" Foreground="White" Padding="20,8" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>
