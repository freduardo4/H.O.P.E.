<UserControl x:Class="HOPE.Desktop.Views.MapVisualizationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:converters="clr-namespace:HOPE.Desktop.Converters"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#121212">
    <!-- Converters defined in App.xaml: DiffToColorConverter, BooleanToVisibilityConverter, InverseBooleanToVisibilityConverter, InverseBooleanConverter -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="ECU MAP VISUALIZATION" Foreground="White" FontSize="32" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
            <Border Background="#2979FF" CornerRadius="4" Padding="8,4" Margin="15,0,0,0" VerticalAlignment="Center"
                    Visibility="{Binding IsDiffMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="DIFF MODE" Foreground="White" FontSize="12" FontWeight="Bold"/>
            </Border>
        </StackPanel>

        <!-- Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="READ FROM ECU" Command="{Binding ReadEcuMapCommand}"
                    Padding="20,10" Background="#2979FF" Foreground="White" BorderThickness="0" FontWeight="Bold"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="LOAD COMPARE MAP" Command="{Binding LoadCompareMapCommand}"
                    Padding="20,10" Margin="10,0,0,0" Background="#7B1FA2" Foreground="White" BorderThickness="0" FontWeight="Bold">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="TOGGLE DIFF" Command="{Binding ToggleDiffModeCommand}"
                    Padding="20,10" Margin="10,0,0,0" Background="#00897B" Foreground="White" BorderThickness="0" FontWeight="Bold"/>

            <Button Content="OPTIMIZE MAP" Command="{Binding OptimizeMapCommand}"
                    Padding="20,10" Margin="10,0,0,0" Background="#FF6F00" Foreground="White" BorderThickness="0" FontWeight="Bold"
                    IsEnabled="{Binding IsOptimizerAvailable}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock Text="{Binding StatusMessage}" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="14"/>
        </StackPanel>

        <!-- Optimization Settings & Progress Panel -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="8" Padding="15" Margin="0,0,0,15"
                Visibility="{Binding IsOptimizing, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="GENETIC ALGORITHM OPTIMIZATION" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ProgressBar Grid.Column="0" Value="{Binding OptimizationProgress}" Minimum="0" Maximum="100"
                                 Height="20" Background="#333333" Foreground="#FF6F00"/>
                    <TextBlock Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0}%">
                                <Binding Path="OptimizationProgress"/>
                            </MultiBinding>
                        </TextBlock.Text>
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="#FF6F00"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                </Grid>

                <TextBlock Text="{Binding OptimizationStatus}" Foreground="#888888" FontSize="12" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Optimization Results Panel -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="8" Padding="15" Margin="0,0,0,15"
                Visibility="{Binding ShowOptimizationResults, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="FINAL FITNESS" Foreground="#888888" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Foreground="#FF6F00" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F3}">
                                <Binding Path="LastFitness"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="AFR ERROR" Foreground="#888888" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Foreground="#2196F3" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F3}">
                                <Binding Path="LastAfrError"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="CELLS CHANGED" Foreground="#888888" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding LastCellsChanged}" Foreground="#4CAF50" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="STATUS" Foreground="#888888" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding OptimizationStatus}" Foreground="#888888" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Diff Statistics Panel (visible only in diff mode) -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="8" Padding="15" Margin="0,0,0,15"
                Visibility="{Binding IsDiffMode, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cells Changed -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="CELLS CHANGED" Foreground="#888888" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock Text="{Binding TotalCellsChanged}" Foreground="#FF9800" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text=" / " Foreground="#555555" FontSize="24"/>
                        <TextBlock Text="{Binding TotalCells}" Foreground="#555555" FontSize="24"/>
                    </StackPanel>
                </StackPanel>

                <!-- Average Change -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="AVG % CHANGE" Foreground="#888888" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Foreground="#2196F3" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F1}%">
                                <Binding Path="AveragePercentChange"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <!-- Max Increase -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="MAX INCREASE" Foreground="#888888" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Foreground="#4CAF50" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="+{0:F2}">
                                <Binding Path="MaxIncrease"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <!-- Max Decrease -->
                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock Text="MAX DECREASE" Foreground="#888888" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Foreground="#F44336" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F2}">
                                <Binding Path="MaxDecrease"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>

                <!-- Legend -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <Border Width="20" Height="20" Background="#2E7D32" CornerRadius="3"/>
                    <TextBlock Text="Increased" Foreground="#888888" VerticalAlignment="Center" Margin="5,0,15,0" FontSize="11"/>
                    <Border Width="20" Height="20" Background="#D32F2F" CornerRadius="3"/>
                    <TextBlock Text="Decreased" Foreground="#888888" VerticalAlignment="Center" Margin="5,0,15,0" FontSize="11"/>
                    <Border Width="20" Height="20" Background="#2D2D2D" CornerRadius="3"/>
                    <TextBlock Text="Unchanged" Foreground="#888888" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Map Grid - Single View Mode -->
        <Border Grid.Row="3" Background="#1E1E1E" CornerRadius="8" Padding="10"
                Visibility="{Binding IsDiffMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding MapData}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!-- Row Axis Label (RPM Mock) -->
                                <Border Width="60" Height="40" Background="#252525" BorderBrush="#121212" BorderThickness="1">
                                    <TextBlock Text="{Binding Index, ConverterParameter=500, Converter={StaticResource RpmAxisConverter}}"
                                               Foreground="#888888" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11"/>
                                </Border>

                                <ItemsControl ItemsSource="{Binding Values}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="60" Height="40" BorderBrush="#121212" BorderThickness="1">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{Binding ., Converter={StaticResource ValueToHeatmapConverter}}"/>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding ., StringFormat={}{0:F1}}" Foreground="White"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" FontWeight="SemiBold"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Map Grid - Diff View Mode -->
        <Border Grid.Row="3" Background="#1E1E1E" CornerRadius="8" Padding="10"
                Visibility="{Binding IsDiffMode, Converter={StaticResource BooleanToVisibilityConverter}}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding DiffData}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!-- Row Axis Label (RPM Mock) -->
                                <Border Width="60" Height="50" Background="#252525" BorderBrush="#121212" BorderThickness="1">
                                    <TextBlock Text="{Binding Index, ConverterParameter=500, Converter={StaticResource RpmAxisConverter}}"
                                               Foreground="#888888" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11"/>
                                </Border>

                                <ItemsControl ItemsSource="{Binding Cells}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="80" Height="50" BorderBrush="#121212" BorderThickness="1"
                                                    Background="{Binding ., Converter={StaticResource DiffToColorConverter}}"
                                                    ToolTip="{Binding DisplayText}">
                                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding CompareValue, StringFormat={}{0:F1}}"
                                                               Foreground="White" HorizontalAlignment="Center" FontSize="12" FontWeight="SemiBold"/>
                                                    <TextBlock HorizontalAlignment="Center" FontSize="9" Margin="0,2,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="{Binding Difference, StringFormat=({0:+0.0;-0.0;0})}"/>
                                                                <Setter Property="Foreground" Value="#AAAAAA"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding HasChanged}" Value="False">
                                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBlock Text="* Values represent Target AFR in Mode 01" Foreground="#555555" FontSize="11" FontStyle="Italic"/>
            <TextBlock Text=" | Green = Richer mixture (more fuel), Red = Leaner mixture (less fuel)" Foreground="#555555" FontSize="11" FontStyle="Italic"
                       Visibility="{Binding IsDiffMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        </StackPanel>
    </Grid>
</UserControl>
