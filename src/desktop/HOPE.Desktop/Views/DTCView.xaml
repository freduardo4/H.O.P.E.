<UserControl x:Class="HOPE.Desktop.Views.DTCView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800"
             Background="#121212">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="DIAGNOSTIC TROUBLE CODES" Foreground="White" FontSize="32" FontWeight="Bold"/>
            <TextBlock Text="Read and clear vehicle DTCs" Foreground="#AAAAAA" FontSize="14"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="Read DTCs" Command="{Binding ReadDTCsCommand}" 
                    Padding="20,10" FontSize="14" FontWeight="SemiBold"
                    Background="#2979FF" Foreground="White" BorderThickness="0" Margin="0,0,10,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Clear DTCs" Command="{Binding ClearDTCsCommand}"
                    Padding="20,10" FontSize="14" FontWeight="SemiBold"
                    Background="#F44336" Foreground="White" BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <!-- DTC List -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="10" Padding="10">
            <Grid>
                <!-- Loading Indicator -->
                <TextBlock Text="Scanning..." Foreground="#AAAAAA" FontSize="18" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- DTC List -->
                <ListView ItemsSource="{Binding DiagnosticCodes}" 
                          Background="Transparent" BorderThickness="0"
                          Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#252525" CornerRadius="8" Margin="0,4" Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Code -->
                                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                        <TextBlock Text="{Binding Code}" Foreground="#00E676" FontSize="20" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Category}" Foreground="#666666" FontSize="11"/>
                                    </StackPanel>
                                    
                                    <!-- Description -->
                                    <TextBlock Grid.Column="1" Text="{Binding Description}" 
                                               Foreground="#DDDDDD" FontSize="14" 
                                               VerticalAlignment="Center" TextWrapping="Wrap"/>
                                    
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Content="Community Fixes" 
                                                Command="{Binding ViewFixCommand}" 
                                                CommandParameter="{Binding}"
                                                Padding="10,4" Margin="0,0,10,0" FontSize="11" 
                                                Background="#252525" Foreground="#00AAFF" BorderBrush="#00AAFF" BorderThickness="1">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                        <Border Background="{Binding SeverityColor}" 
                                                CornerRadius="4" Padding="10,4" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Severity}" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#1E1E1E" CornerRadius="6" Padding="12,8" Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" Foreground="#AAAAAA" FontSize="13"/>
        </Border>
    </Grid>
</UserControl>
