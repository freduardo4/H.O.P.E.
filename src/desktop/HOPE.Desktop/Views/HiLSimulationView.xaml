<UserControl x:Class="HOPE.Desktop.Views.HiLSimulationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#121212">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="HARDWARE-IN-THE-LOOP (HiL)" Foreground="#FFD700" FontSize="32" FontWeight="Bold"/>
            <TextBlock Text="Simulation Fault Injection Engine" Foreground="#888888" FontSize="14"/>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,30">
            <Button Content="VOLTAGE DROP" Command="{Binding InjectVoltageDropCommand}" 
                    Background="#331A1A" Foreground="#FF5252" Padding="20,15" Margin="5" BorderThickness="1" BorderBrush="#80FF5252"/>
            <Button Content="RPM NOISE" Command="{Binding InjectRpmNoiseCommand}" 
                    Background="#1A1A33" Foreground="#448AFF" Padding="20,15" Margin="5" BorderThickness="1" BorderBrush="#80448AFF"/>
            <Button Content="HIGH TEMP" Command="{Binding InjectHighTempCommand}" 
                    Background="#332B1A" Foreground="#FFAB40" Padding="20,15" Margin="5" BorderThickness="1" BorderBrush="#80FFAB40"/>
            <Button Content="CLEAR ALL" Command="{Binding ClearAllFaultsCommand}" 
                    Background="#252525" Foreground="#AAAAAA" Padding="20,15" Margin="5" BorderThickness="0"/>
        </UniformGrid>

        <Border Grid.Row="2" Background="#1A1A1A" CornerRadius="10" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="ACTIVE FAULTS" Foreground="#666666" FontSize="12" FontWeight="Bold" Margin="0,0,0,15"/>
                
                <ListBox Grid.Row="1" ItemsSource="{Binding ActiveFaults}" Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#252525" CornerRadius="5" Padding="15,10" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Ellipse Width="8" Height="8" Fill="#FF5252" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Type}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding TargetParameter}" Foreground="#888888" FontSize="12"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" Text="{Binding Intensity, StringFormat=Intensity: {0:P0}}" 
                                               Foreground="#FFD700" FontSize="12" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
