<UserControl x:Class="HOPE.Desktop.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HOPE.Desktop.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#1A1A1A">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="H.O.P.E." FontSize="48" FontWeight="Bold" Foreground="White" Margin="0,0,0,40" HorizontalAlignment="Center"/>
            <TextBlock Text="Welcome back, please sign in" Foreground="#888" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            
            <!-- Email/Password Login -->
            <TextBox Width="200" Height="30" Margin="0,5" Padding="5" 
                     Text="{Binding Email}" 
                     Tag="Email" />
            <PasswordBox Width="200" Height="30" Margin="0,5" Padding="5"
                         x:Name="PasswordBox" />
                         
            <Button Content="Login" 
                    Command="{Binding LoginWithEmailCommand}"
                    CommandParameter="{Binding ElementName=PasswordBox}"
                    Background="#007ACC" Foreground="White" 
                    Padding="20,10" Margin="0,15,0,25" Width="200"/>

            <TextBlock Text="Or sign in with" Foreground="#666" Margin="0,0,0,10" HorizontalAlignment="Center" FontSize="10"/>

            <Button Content="Login with Google" 
                    Command="{Binding LoginWithGoogleCommand}"
                    Background="#DB4437" Foreground="White" 
                    Padding="20,10" Margin="0,10" Width="200"/>
            
            <Button Content="Login with GitHub" 
                    Command="{Binding LoginWithGithubCommand}"
                    Background="#333" Foreground="White" 
                    Padding="20,10" Margin="0,10" Width="200"/>
        </StackPanel>
    </Grid>
</UserControl>
