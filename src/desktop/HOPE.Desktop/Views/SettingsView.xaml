<UserControl x:Class="HOPE.Desktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800"
             Background="#121212">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="SETTINGS" Foreground="White" FontSize="32" FontWeight="Bold"/>
            <TextBlock Text="Configure OBD2 adapter connection" Foreground="#AAAAAA" FontSize="14"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Connection Settings -->
                <Border Background="#1E1E1E" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Connection" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        
                        <!-- COM Port -->
                        <TextBlock Text="COM Port" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" ItemsSource="{Binding AvailablePorts}" 
                                      SelectedItem="{Binding SelectedPort}"
                                      Background="#252525" Foreground="White" 
                                      Padding="10,8" FontSize="14"/>
                            <Button Grid.Column="1" Content="Refresh" Command="{Binding RefreshPortsCommand}"
                                    Background="#333333" Foreground="White" BorderThickness="0"
                                    Padding="15,8" Margin="10,0,0,0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>

                        <!-- Baud Rate -->
                        <TextBlock Text="Baud Rate" Foreground="#AAAAAA" FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding BaudRates}" 
                                  SelectedItem="{Binding SelectedBaudRate}"
                                  Background="#252525" Foreground="White" 
                                  Padding="10,8" FontSize="14" Margin="0,0,0,20"/>

                        <!-- Connection Buttons -->
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Test Connection" Command="{Binding TestConnectionCommand}"
                                    Background="#2979FF" Foreground="White" BorderThickness="0"
                                    Padding="20,10" FontSize="14" FontWeight="SemiBold" Margin="0,0,10,0"
                                    IsEnabled="{Binding IsTesting, Converter={StaticResource InverseBooleanConverter}}">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button Content="Disconnect" Command="{Binding DisconnectCommand}"
                                    Background="#F44336" Foreground="White" BorderThickness="0"
                                    Padding="20,10" FontSize="14" FontWeight="SemiBold"
                                    IsEnabled="{Binding IsConnected}">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Connection Status -->
                <Border Background="#1E1E1E" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Status" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Ellipse Width="12" Height="12" 
                                     Fill="{Binding IsConnected, Converter={StaticResource BooleanToStatusColorConverter}}" 
                                     Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding ConnectionStatus}" Foreground="White" FontSize="14"/>
                        </StackPanel>

                        <TextBlock Text="{Binding AdapterInfo}" Foreground="#AAAAAA" FontSize="13" 
                                   Visibility="{Binding AdapterInfo, Converter={StaticResource StringToVisibilityConverter}}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- About Section -->
                <Border Background="#1E1E1E" CornerRadius="10" Padding="20">
                    <StackPanel>
                        <TextBlock Text="About" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <TextBlock Text="H.O.P.E - High-Output Performance Engineering" Foreground="#AAAAAA" FontSize="13"/>
                        <TextBlock Text="Version 1.0.0" Foreground="#666666" FontSize="12" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
