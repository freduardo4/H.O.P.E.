# H.O.P.E - Infrastructure Environment Variables
# Copy this to .env and modify as needed

# --- Database Configuration ---
POSTGRES_USER=hope_admin
POSTGRES_PASSWORD=hope_secure_password
POSTGRES_DB=hope_db
POSTGRES_PORT=5432

# --- TimescaleDB Settings ---
# Allocation for tuning (set based on your local machine)
TS_TUNE_MEMORY=512MB
TS_TUNE_NUM_CPUS=2

# --- LocalStack (AWS Emulation) Configuration ---
LOCALSTACK_SERVICES=s3
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# --- S3 Bucket Configuration ---
S3_ECU_STORAGE_BUCKET=hope-ecu-files

# --- pgAdmin Configuration (Web UI for DB Management) ---
# Access at http://localhost:5050
PGADMIN_DEFAULT_EMAIL=admin@hope-tuning.com
PGADMIN_DEFAULT_PASSWORD=admin
